<%- model_class = Garden -%>
<div class="row">
  <div class="span12">
    <div class="page-header">
      <h3>Turn idle backyards into fresh fruits and veggies</h3>
    </div>
  </div>
</div>
<div class="row">
  <div class="span4">
    <%= gmaps("map_options" => { "detect_location" => true,
                                 "center_on_user" => true,
                                 :auto_adjust => true, "zoom" => 6},
                                 "markers" => { "data" => @json }) %>
  </div>
  <div class="span8">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>20 gardens</th>
        </tr>
      </thead>
      <tbody>
		<% # The code that was here is now in the views/gardens/_garden partial. %>
        <%= render @gardens %>
      </tbody>
    </table>


  </div> <!-- span8 -->

</div>
